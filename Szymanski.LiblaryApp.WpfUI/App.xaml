<Application x:Class="Szymanski.LiblaryApp.WpfUI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Szymanski.LiblaryApp.WpfUI.MVVM.ViewModel"
             xmlns:view="clr-namespace:Szymanski.LiblaryApp.WpfUI.MVVM.View">
    <Application.Resources>
         <DataTemplate DataType="{x:Type TypeName=local:AuthorsViewModel}">
             <view:AuhtorsView/>
         </DataTemplate>
        
        <DataTemplate DataType="{x:Type TypeName=local:BooksViewModel}">
            <view:BooksView/>
        </DataTemplate>
        
        <DataTemplate DataType="{x:Type TypeName=local:PublishersViewModel}">
            <view:PublishersView/>
        </DataTemplate>
    </Application.Resources>
</Application>
